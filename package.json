{
  "name": "react-native-segmented-picker",
  "version": "1.1.0",
  "description": "A segmentable dropdown picker wheel with no native dependencies.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint ./ && tsc --project ./tsconfig.json --noEmit --skipLibCheck",
    "unit-test": "jest ./",
    "test": "yarn lint && yarn unit-test",
    "build": "rm -rf dist && rollup --config rollup.config.js"
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.jsx?$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|!react-navigation|!static-container)"
    ],
    "setupFiles": [
      "./__mocks__/init.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adammcarth/react-native-segmented-picker.git"
  },
  "keywords": [
    "react-native",
    "react native component",
    "react native",
    "ios",
    "android",
    "ui",
    "spinner",
    "dropdown list",
    "wheel spinner",
    "date spinner",
    "date picker",
    "wheel picker",
    "segmented picker",
    "segmented dropdown"
  ],
  "bugs": {
    "url": "https://github.com/adammcarth/react-native-segmented-picker/issues"
  },
  "homepage": "https://github.com/adammcarth/react-native-segmented-picker#readme",
  "author": "Adam McArthur",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "prop-types": ">= 15.0.0",
    "react-native-animatable": "^1.3.0"
  },
  "peerDependencies": {
    "react": ">= 16.3.0",
    "react-native": ">= 0.55.0"
  },
  "devDependencies": {
    "@babel/core": "7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-react-jsx": "^7.9.4",
    "@rollup/plugin-babel": "^5.0.0",
    "@types/jest": "24.0.24",
    "@types/react-native": "0.60.25",
    "@types/react-test-renderer": "16.9.1",
    "@typescript-eslint/eslint-plugin": "2.17.0",
    "@typescript-eslint/parser": "2.12.0",
    "babel-jest": "24.9.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb-typescript": "6.3.1",
    "eslint-plugin-import": "2.20.0",
    "eslint-plugin-jest": "23.8.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.18.0",
    "jest": "25.5.4",
    "metro-react-native-babel-preset": "^0.56.0",
    "react": "16.9.0",
    "react-native": "0.61.5",
    "react-test-renderer": "16.9.0",
    "rollup": "^2.10.2",
    "rollup-plugin-typescript2": "^0.27.1",
    "typescript": "3.7.3"
  }
}
